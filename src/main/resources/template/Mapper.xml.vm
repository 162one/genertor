<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="${package}.${moduleName}.mapper.${className}Mapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="${package}.${moduleName}.entity.${className}" id="${classname}Map">
#foreach($column in $columns)
#if($column.columnName == $pk.columnName)
        <id property="${column.attrname}" column="${column.columnName}" jdbcType="${column.dataTypeToUpperCase}"/>
#else
        <result property="${column.attrname}" column="${column.columnName}" jdbcType="${column.dataTypeToUpperCase}"/>
#end
#end
    </resultMap>

    <sql id="Base_Column_List">
        #foreach($column in $columns)#if($column.columnName == $pk.columnName)${column.columnName}#else,${column.columnName}#end#end

    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="${classname}Map">
        select
            <include refid="Base_Column_List" />
        from
            ${tableName}
        where
            ${pk.columnName} = #{${pk.attrname},jdbcType=${pk.dataTypeToUpperCase}}
    </select>

    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="${package}.${moduleName}.entity.${className}" useGeneratedKeys="true">
        insert into ${tableName}
            <trim prefix="(" suffix=")" suffixOverrides=",">
#foreach($column in $columns)
                <if test="${column.attrname} != null">${column.columnName},</if>
#end
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides=",">
#foreach($column in $columns)
                <if test="${column.attrname} != null">#{${column.attrname},jdbcType=${column.dataTypeToUpperCase}},</if>
#end
            </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="${package}.${moduleName}.entity.${className}">
        update ${tableName}
            <set>
#foreach($column in $columns)
            <if test="${column.attrname} != null">
                ${column.columnName} = #{${column.attrname},jdbcType=${column.dataTypeToUpperCase}},
            </if>
#end
            </set>
        where   id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from ${tableName} WHERE ${pk.columnName} = #{${pk.attrname},jdbcType=${pk.dataTypeToUpperCase}}
    </delete>

</mapper>
